<h1>sign up</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-order-sm-1 col-md-6 col-md-offset-3 col-order-md-1 col-lg-6 col-lg-offset-3 col-order-lg-1 signup">
<%= form_for(@user , url: users_path ) do |f| %>
   <%= render 'shared/error_message'%>
   <%= f.label :username %>
   <%= f.text_field :username, class: 'form-control' %>

   <%= f.label :email %>
   <%= f.email_field :email, class: 'form-control' %>

   <%= f.label :password %>
   <%= f.password_field :password, class: 'form-control'  %>

   <%= f.label :password %>
   <%= f.password_field :password_confirmation, class: 'form-control'  %>
   
   <%= f.submit "create account " , class: "btn btn-default"%>

<% end %>
</div>
</div>
</div>
